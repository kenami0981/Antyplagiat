             Background="White"
             Height="1000"
             Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            
            <RowDefinition Height="Auto"/>
            
            <RowDefinition Height="*"/>
          
        </Grid.RowDefinitions>
        <TextBlock Text="Analiza Plagiatu" HorizontalAlignment="Center" FontSize="30"/>
        
        <TextBlock x:Name="WynikText"
                   FontSize="18"
