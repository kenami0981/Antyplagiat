<UserControl x:Class="Antyplagiat.Ekran1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Antyplagiat"
        mc:Ignorable="d"
             Background="White"
        Height="850" Width="1000">
    <StackPanel Margin="20,0,20,0">



        <TextBlock Text="Antyplagiat" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Text="Dodaj dokument, który chcesz sprawdzić pod kątem plagiatu" FontSize="15" FontWeight="Medium" Margin="0,40,0,0"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="570" Height="100" Margin="10">
            <Rectangle x:Name="DashedBorder" Stroke="#C0C8D0" StrokeThickness="2" RadiusX="12" RadiusY="12"
           StrokeDashArray="4,2" Fill="Transparent"/>
            <Button Click="SelectLatexFile_Click" Background="Transparent" BorderThickness="0" Cursor="Hand" Padding="20">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Rectangle x:Name="BorderRect" Stroke="#C0C8D0" StrokeThickness="2"
                                       RadiusX="12" RadiusY="12" StrokeDashArray="4,2" Fill="Transparent"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Image Source="/icon/upload.png" Width="34" Height="34" Margin="0,0,8,0"/>
                                            <TextBlock x:Name="BtnText" Text="Wybierz plik LaTeX" FontSize="16" Foreground="#4A5568" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="BorderRect" Property="Stroke" Value="#4A5568"/>
                                            <Setter TargetName="BtnText" Property="Foreground" Value="#000080"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
        <StackPanel Margin="0,20,0,0">
            <Label Content="Wybierz poziom poprawności" FontSize="15" FontWeight="Medium" Margin="0,0,0,8"/>
            <RadioButton x:Name="PoziomNiski" GroupName="Poziom" FontSize="15" FontWeight="Medium" Margin="20,23">
                <RadioButton.Content>
                    <TextBlock Text="Niski" Margin="0,-2,0,0"/>
                </RadioButton.Content>
            </RadioButton>
            <RadioButton x:Name="PoziomSredni" GroupName="Poziom" FontSize="15" FontWeight="Medium" Margin="20,23">
                <RadioButton.Content>
                    <TextBlock Text="Średni" Margin="0,-2,0,0"/>
                </RadioButton.Content>
            </RadioButton>
            <RadioButton x:Name="PoziomWysoki" GroupName="Poziom" FontSize="15" FontWeight="Medium" Margin="20,23">
                <RadioButton.Content>
                    <TextBlock Text="Wysoki" Margin="0,-2,0,0"/>
                </RadioButton.Content>
            </RadioButton>
            <RadioButton x:Name="PoziomBardzoWysoki" GroupName="Poziom" FontSize="15" FontWeight="Medium" Margin="20,23">
                <RadioButton.Content>
                    <TextBlock Text="Bardzo wysoki" Margin="0,-2,0,0"/>
                </RadioButton.Content>
            </RadioButton>
        </StackPanel>
        <Button Name="myButton" Content="Sprawdź dokument" FontSize="15"
           FontWeight="Medium" Foreground="White" Background="#1f1f1f"
           BorderThickness="0" Padding="10" Margin="20,35" Height="49" Click="CheckDocClicked">

            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>

        </Button>
    </StackPanel>
</UserControl>
