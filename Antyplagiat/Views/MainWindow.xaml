<Window x:Class="Antyplagiat.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Antyplagiat.ViewModels"
        xmlns:views="clr-namespace:Antyplagiat.Views"
        Title="Antyplagiat" Height="750" Width="650">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:InputViewModel}">
            <views:InputView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ResultViewModel}">
            <views:ResultView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding CurrentView}" />
    </Grid>
</Window>