<UserControl x:Class="Antyplagiat.Views.InputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White"
             Height="850" Width="1000">
    <StackPanel Margin="20,0,20,0">

        <TextBlock Text="Antyplagiat" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Text="Dodaj dokument, który chcesz sprawdzić pod kątem plagiatu" 
                   FontSize="15" FontWeight="Medium" Margin="0,40,0,0"/>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="570" Height="100" Margin="10">
            <Rectangle Stroke="#C0C8D0" StrokeThickness="2" RadiusX="12" RadiusY="12"
                       StrokeDashArray="4,2" Fill="Transparent"/>

            <Button Command="{Binding SelectFileCommand}" 
                    Background="Transparent" BorderThickness="0" Cursor="Hand" Padding="20">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Rectangle x:Name="BorderRect" Stroke="Transparent" Fill="Transparent"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image Source="/icon/upload.png" Width="34" Height="34" Margin="0,0,8,0"/>

                                <TextBlock x:Name="BtnText" 
                                           Text="{Binding FileNameDisplay}" 
                                           FontSize="16" Foreground="#4A5568" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnText" Property="Foreground" Value="#000080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,20,0,0">
                <Label Content="Wybierz poziom podobieństwa" FontSize="15" FontWeight="Medium" Margin="0,0,0,8"/>

                <RadioButton IsChecked="{Binding LevelLow}" GroupName="Poziom" FontSize="15" FontWeight="Medium" Margin="20,23" Content="Niski"/>
                <RadioButton IsChecked="{Binding LevelMedium}" GroupName="Poziom" FontSize="15" FontWeight="Medium" Margin="20,23" Content="Średni"/>
                <RadioButton IsChecked="{Binding LevelHigh}" GroupName="Poziom" FontSize="15" FontWeight="Medium" Margin="20,23" Content="Wysoki"/>
                <RadioButton IsChecked="{Binding LevelVeryHigh}" GroupName="Poziom" FontSize="15" FontWeight="Medium" Margin="20,23" Content="Bardzo wysoki"/>
            </StackPanel>

            <StackPanel Margin="0,20,0,0" Grid.Column="1">
                <Label Content="Wybierz typ analizy" FontSize="15" FontWeight="Medium" Margin="0,0,0,8"/>

                <RadioButton IsChecked="{Binding TypeFast}" GroupName="Type" FontSize="15" FontWeight="Medium" Margin="20,23" Content="Szybki"/>
                <RadioButton IsChecked="{Binding TypeNormal}" GroupName="Type" FontSize="15" FontWeight="Medium" Margin="20,23" Content="Normalny"/>
            </StackPanel>
        </Grid>

        <Button Content="Sprawdź dokument" 
                Command="{Binding AnalyzeCommand}"
                FontSize="15" FontWeight="Medium" Foreground="White" Background="#1f1f1f"
                BorderThickness="0" Padding="10" Margin="20,35" Height="49">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>

        <TextBlock Text="Trwa analiza..." Foreground="Red" HorizontalAlignment="Center" 
                   Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />

    </StackPanel>
</UserControl>