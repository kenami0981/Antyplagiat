<UserControl x:Class="Antyplagiat.Views.ResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
             Background="White"
             Height="1000" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Analiza Plagiatu" HorizontalAlignment="Center" FontSize="30" Margin="10"/>

        <TextBlock Text="{Binding ResultText}"
                   FontSize="18"
                   TextWrapping="Wrap"
                   Margin="20"
                   Grid.Row="1"/>

        <wfi:WindowsFormsHost x:Name="PdfHost"
                              Grid.Row="2"
                              Margin="10"
                              Loaded="PdfHost_Loaded"/>

        <Button Grid.Row="3" 
                Content="Wróć do wyboru pliku"
                Command="{Binding GoBackCommand}"
                Width="200" Height="40" Margin="10"
                Background="#1f1f1f" Foreground="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</UserControl>